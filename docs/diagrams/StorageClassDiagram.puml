@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor STORAGE_COLOR
skinparam classBackgroundColor STORAGE_COLOR

package Storage as StoragePackage {

package "UserPrefs Storage" #F4F6F6{
Class "<<interface>>\nUserPrefsStorage" as UserPrefsStorage
Class JsonUserPrefsStorage
}

Class "<<interface>>\nStorage" as Storage
Class StorageManager

package "FoodNotes Storage" #F4F6F6{
Class "<<interface>>\nFoodNotesStorage" as FoodNotesStorage
Class JsonFoodNotesStorage
Class JsonSerializableFoodNotes
Class JsonAdaptedStall
Class JsonAdaptedItem
Class JsonSerializableMenu
}

}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Storage

StorageManager .up.|> Storage
StorageManager -up-> "1" UserPrefsStorage
StorageManager -up-> "1" FoodNotesStorage

Storage -left-|> UserPrefsStorage
Storage -right-|> FoodNotesStorage

JsonUserPrefsStorage .up.|> UserPrefsStorage
JsonFoodNotesStorage .up.|> FoodNotesStorage
JsonFoodNotesStorage ..> JsonSerializableFoodNotes
JsonSerializableFoodNotes --> "*" JsonAdaptedStall
JsonAdaptedStall --> "1" JsonSerializableMenu
JsonSerializableMenu --> "*" JsonAdaptedItem

@enduml
